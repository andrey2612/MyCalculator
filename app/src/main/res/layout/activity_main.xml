<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:columnCount="4"
    android:useDefaultMargins="true"
    android:padding="@dimen/calc_defPad"
    android:background="@color/calc_bg">
    <TextView
        android:id="@+id/result"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_0"
        android:textSize="@dimen/size_result"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:gravity="end"
        android:padding="@dimen/calc_defPad"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_1"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_2"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_3"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_add"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_add"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/calc_btnLight"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_4"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_5"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_6"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_6"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_sub"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_sub"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/calc_btnLight"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_7"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_7"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_8"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_8"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_9"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_9"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_mul"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_mul"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/calc_btnLight"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_0"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_dot"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_dot"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_div"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_div"
        android:layout_columnWeight="1"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/calc_btnLight"
        android:textColor="@color/calc_txt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_eq"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/key_eq"
        android:layout_columnWeight="1"
        android:layout_columnSpan="4"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/calc_btnOrange"
        android:textColor="@color/calc_txt"/>
</GridLayout>